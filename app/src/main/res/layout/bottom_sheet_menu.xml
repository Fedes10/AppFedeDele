<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="32dp">

        <!-- Handle del Bottom Sheet -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_bottom_sheet_handle" />

        <!-- Header con logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/images"
                android:scaleType="centerCrop"
                android:contentDescription="Logo Dele" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="La Dele"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delegación de Juventud"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Sección: Secciones principales -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SECCIONES"
            android:textColor="@color/text_tertiary"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <!-- Inicio -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuHomeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/orange_very_light"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="@color/ripple_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_home_filled"
                    app:tint="@color/orange_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicio"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="16dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Grid de opciones principales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:baselineAligned="false">

            <!-- Cancionero -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/menuCancioneroCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardBackgroundColor="@color/md_theme_surfaceElevation1"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/ripple_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_music"
                        app:tint="@color/orange_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancionero"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="8dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Noticias -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/menuNoticiasCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardBackgroundColor="@color/md_theme_surfaceElevation1"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/ripple_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_newspaper"
                        app:tint="@color/orange_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noticias"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="8dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Sección: Peregrinaciones -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PEREGRINACIONES"
            android:textColor="@color/text_tertiary"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Guadalupe 2025 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuGuadalupeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="@color/ripple_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="@color/orange_light"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_pilgrimage"
                        app:tint="@color/orange_primary" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¡Ven a Guadalupe!"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peregrinación 2025"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/text_tertiary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Fátima 2026 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuFatimaCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="@color/ripple_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="@color/orange_light"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_church"
                        app:tint="@color/orange_primary" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¡Hacia Fátima 2026!"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Próxima peregrinación"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/text_tertiary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Inmaculada -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuInmaculadaCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="@color/ripple_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="@color/orange_light"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_event"
                        app:tint="@color/orange_primary" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inmaculada"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Procesiones y eventos"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/text_tertiary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Información -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFORMACIÓN"
            android:textColor="@color/text_tertiary"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:baselineAligned="false">

            <!-- Contacto -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/menuContactCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardBackgroundColor="@color/md_theme_surfaceElevation2"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/ripple_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_contact"
                        app:tint="@color/orange_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contacto"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Acerca de -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/menuAboutCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardBackgroundColor="@color/md_theme_surfaceElevation2"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/ripple_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/orange_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acerca de"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Login / Registro -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/menuLoginButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/orange_primary"
            android:text="Login / Registro"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_person"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            app:rippleColor="@color/orange_light" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
