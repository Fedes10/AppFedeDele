<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Barra de navegación inferior con curva -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNavCard"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="36dp"
        app:cardElevation="16dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:baselineAligned="false">

            <!-- Noticias -->
            <LinearLayout
                android:id="@+id/navNewsContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/navNews"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_news"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/navNewsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Noticias"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Calendario / Eventos -->
            <LinearLayout
                android:id="@+id/navCalendarContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/navCalendar"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/navCalendarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Eventos"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Espacio para el FAB central -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3" />

            <!-- Cancionero -->
            <LinearLayout
                android:id="@+id/navCancioneroContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/navCancionero"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_music"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/navCancioneroText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Cancionero"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Perfil -->
            <LinearLayout
                android:id="@+id/navProfileContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/navProfile"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/navProfileText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Perfil"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- FAB Central (Cruz) - Elevado sobre la barra -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp"
        android:contentDescription="Menú principal"
        android:src="@drawable/ic_cross"
        app:backgroundTint="@color/orange_primary"
        app:elevation="20dp"
        app:fabCustomSize="64dp"
        app:maxImageSize="28dp"
        app:pressedTranslationZ="8dp"
        app:rippleColor="@color/orange_light"
        app:shapeAppearance="@style/ShapeAppearance.DeleFede.FAB.Large"
        app:tint="@color/white" />

    <!-- Overlay para efecto de sombra inferior del FAB -->
    <View
        android:id="@+id/fabShadow"
        android:layout_width="70dp"
        android:layout_height="6dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="34dp"
        android:alpha="0.15"
        android:background="@drawable/bg_fab_shadow" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
